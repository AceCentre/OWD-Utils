{
    "name": "clipboard-webrtc-app",
    "version": "1.0.0",
    "description": "Clipboard WebRTC app for monitoring clipboard and sending data over WebRTC.",
    "author": "Will Wade <wwade@acecentre.org.uk>",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "package": "electron-builder"
    },
    "build": {
        "appId": "uk.org.acecentre.clipboardowd",
        "productName": "Clipboard WebRTC App",
        "extraResources": [
            {
                "from": "assets",
                "to": "assets"
            },
            {
                "from": "libs",
                "to": "libs"
            }
        ],
        "files": [
            "main.js",
            "webrtc.js",
            "ocr.js",
            "iceServers.js",
            "preload.js",
            "config.json",
            "libs/**/*",
            "icon.png",
            "node_modules/**/*",
            "assets/**/*"
        ],
        "asarUnpack": [
            "**/*.png",
            "libs/**/*.dll",
            "libs/**/*.winmd"
        ],
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "signAndEditExecutable": false
        }
    },
    "dependencies": {
        "@faker-js/faker": "^9.1.0",
        "electron-edge-js": "^33.0.1",
        "node-screenshots": "^0.2.2",
        "qrcode": "^1.5.4",
        "socket.io-client": "^4.8.1",
        "tesseract.js": "^5.1.1",
        "wrtc": "^0.4.7",
        "@mapbox/node-pre-gyp": "^1.0.11",
        "google-translate-api-x": "^10.7.1"
    },
    "devDependencies": {
        "electron": "^32.0.0",
        "electron-builder": "^25.1.8"
    }
}
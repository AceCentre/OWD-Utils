{
    "name": "clipboard-webrtc-app",
    "version": "1.0.0",
    "description": "Clipboard WebRTC app for monitoring clipboard and sending data over WebRTC.",
    "author": "Will Wade <wwade@acecentre.org.uk>",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "package": "electron-builder"
    },
    "build": {
        "appId": "uk.org.acecentre.clipboardowd",
        "productName": "Clipboard WebRTC App",
        "files": [
            "main.js",
            "webrtc.js",
            "icon.png",
            "node_modules/**/*",
            {
                "from": "icon-connected.png",
                "to": "icon-connected.png",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "icon-disconnected.png",
                "to": "icon-disconnected.png",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "asarUnpack": [
            "**/*.png"
        ],
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "signAndEditExecutable": false
        }
    },
    "dependencies": {
        "@faker-js/faker": "^9.1.0",
        "clipboardy": "^2.3.0",
        "socket.io-client": "^4.8.1",
        "wrtc": "^0.4.7"
    },
    "devDependencies": {
        "electron": "^25.0.0",
        "electron-builder": "^25.1.8"
    }
}
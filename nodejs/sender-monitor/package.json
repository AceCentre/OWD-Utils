{
    "name": "clipboard-webrtc-app",
    "version": "1.0.0",
    "description": "Clipboard WebRTC app for monitoring clipboard and sending data over WebRTC.",
    "author": "Will Wade <wwade@acecentre.org.uk>",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "package": "electron-builder"
    },
    "build": {
        "appId": "uk.org.acecentre.clipboardowd",
        "productName": "Clipboard WebRTC App",
        "extraResources": [
            {
                "from": "assets",
                "to": "assets"
            }
        ],
        "files": [
            "main.js",
            "webrtc.js",
            "icon.png",
            "node_modules/**/*",
            "assets/**/*"
        ],
        "asarUnpack": [
            "**/*.png"
        ],
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": [
                "nsis",
                "portable"
            ],
            "signAndEditExecutable": false
        }
    },
    "dependencies": {
        "@faker-js/faker": "^9.1.0",
        "socket.io-client": "^4.8.1",
        "wrtc": "^0.4.7",
        "electron": "^33.0.2"
    },
    "devDependencies": {
        "electron-builder": "^25.1.8"
    }
}